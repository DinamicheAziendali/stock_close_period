<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_close_period_line_tree" model="ir.ui.view">
        <field name="name">stock.close.period.line.tree</field>
        <field name="model">stock.close.period.line</field>
        <field name="arch" type="xml">
            <tree string="stock Close Period Lines" editable="top">
                <field name="close_id" />
                <field name="product_id" />
                <field name="categ_name" />
                <field name="location_id" />
                <field name="lot_id" />
                <field name="owner_id" />
                <field name="evaluation_method" />
                <field name="product_uom_id" />
                <field name="product_qty" />
                <field name="price_unit" />
                <field name="amount_line" />
                <button
                    type="object"
                    name="goto_stock_close_period_line"
                    class="oe_button"
                    icon="fa-external-link"
                />
            </tree>
        </field>
    </record>

    <record id="stock_close_period_line_form" model="ir.ui.view">
        <field name="name">stock.close.period.line.form</field>
        <field name="model">stock.close.period.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="close_id" />
                        <h1><field name="close_id" /></h1>
                    </div>
                    <group>
                        <group string="Product Info">
                            <field name="product_id" />
                            <field name="product_name" />
                            <field name="product_code" />
                            <field name="product_uom_id" />
                            <field name="categ_name" />
                            <field name="company_id" readonly="1" groups="base.group_multi_company" />
                        </group>
                        <group string="Evaluation Info">
                            <field name="location_id" />
                            <field name="lot_id" />
                            <field name="owner_id" />
                            <field name="evaluation_method" />
                            <field name="product_qty" />
                            <field name="price_unit" />
                            <field name="amount_line" />
                        </group>
                        <group string="Amount">
                            <field name="inventory_amount" />
                            <field name="cumulative_amount" />
                            <field name="cumulative_landed_cost" />
                        </group>
                        <group string="Quantity">
                            <field name="inventory_qty" />
                            <field name="cumulative_qty" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_close_period_line_search" model="ir.ui.view">
        <field name="name">stock.close.period.line.search</field>
        <field name="model">stock.close.period.line</field>
        <field name="arch" type="xml">
            <search string="stock Close Period Lines">
                <field name="product_id" />
                <filter string="Qty 0" name="qty_zero" domain="[('product_qty','=',0)]" />
                <filter string="Negative Qty" name="negative_qty" domain="[('product_qty','&lt;',0)]" />
                <group expand="0" string="Group By">
                    <filter string="Stock Close Period" name="close_period" context="{'group_by':'close_id'}" />
                    <filter string="Location" name="location" context="{'group_by':'location_id'}" />
                    <filter string="Product" name="product" context="{'group_by':'product_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_stock_close_form_line" model="ir.actions.act_window">
        <field name="name">Stock Close Period Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.close.period.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_action_stock_close_form_line"
        action="stock_close_period.action_stock_close_form_line"
        parent="stock_close_period.menu_stock_close_group"
        sequence="20"
    />

</odoo>
